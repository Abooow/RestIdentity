@page "/"

<h1>Hello, world!</h1>

<MudButton OnClick="ChangeTheme" Variant="Variant.Filled" Color="Color.Primary">Toggle Dark/Light Mode</MudButton>

@code {
    [CascadingParameter]
    private ThemeProvider themeProvider { get; set; }

    private void ChangeTheme()
    {
        themeProvider.InvertTheme();
    }
}